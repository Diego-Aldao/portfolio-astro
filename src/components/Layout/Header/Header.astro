---
import MainMenu from "../Header/MainMenu.astro";
import Logo from "../../Logo.astro";
import ExternalLinks from "../Header/ExternalLinks.astro";
---

<header
  class="header pt-6 lg:pt-7 px-4 md:px-10 lg:px-12 fixed top-0 w-full md:h-40 lg:h-52 h-32 z-20 pointer-events-none bg-gradient-to-b from-main-black to-transparent"
>
  <nav class="navbar flex justify-center w-full items-center">
    <div class="navbar__contenedor-logo flex-1">
      <Logo />
    </div>
    <MainMenu />
    <ExternalLinks />
  </nav>
</header>
