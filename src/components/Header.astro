---
import Arroba from "../components/Icon/Arroba.astro";
import ArrowRightUp from "../components/Icon/ArrowRightTop.astro";
---

<header
  class="header pt-6 lg:pt-7 px-4 md:px-12 lg:px-14 flex justify-between fixed top-0 w-full items-start md:h-40 lg:h-52 h-32"
>
  <div class="header__logo flex gap-2">
    <div
      class="uppercase flex text-2xl gap-[6px] md:text-3xl rounded-sm w-fit font-medium"
    >
      <span
        class="flex items-center justify-center relative overflow-hidden w-[17px] -skew-x-[30deg] mb-3 -right-1"
      >
        <span class="letra block relative -right-[5px] skew-x-[5deg]">d</span>
      </span>
      <span class="linea bg-white w-[2px] h-12 -skew-x-[30deg] block"></span>
      <span
        class="flex items-center justify-center mt-3 relative overflow-hidden w-[17px] -skew-x-[30deg] -left-1"
      >
        <span class="letra block relative -left-[7px] skew-x-[20deg]">a</span>
      </span>
    </div>
    <div class="logo-desc hidden md:flex flex-col">
      <span class="capitalize text-xl font-medium">diego aldao</span>
      <span class="capitalize text-xs text-secondary-white"
        >desarrollador web</span
      >
    </div>
  </div>
  <div class="header__nav middle-menu sm:h-12 h-11">
    <div class="contenedor flex gap-2">
      <span
        class="pill-current capitalize p-2 text-xs md:text-sm rounded-full px-4 font-medium"
        >about</span
      >
      <span
        class="pill capitalize p-2 text-xs md:text-sm rounded-full px-4 font-medium"
        >proyectos</span
      >
    </div>
  </div>

  <div class="header__links menu-mobile">
    <div class="svg h-11 w-11 md:hidden flex items-center justify-center">
      <Arroba class="text-[#f2f2f2] w-6 h-6" />
    </div>
    <div class="botones hidden md:flex gap-5">
      <span class="flex gap-1 items-center capitalize text-sm h-12 px-2"
        >linkedin <ArrowRightUp class="h-6 w-6" /></span
      >
      <span class="flex gap-1 items-center capitalize text-sm h-12 px-2"
        >curriculum <ArrowRightUp class="h-6 w-6" /></span
      >
    </div>
  </div>
</header>

<style>
  .pill-current {
    background-color: rgba(242, 242, 242, 0.05);
  }
  .svg {
    background-color: rgba(242, 242, 242, 0.05);
    border-radius: 50%;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(12.5px);
    border: 1px solid rgba(242, 242, 242, 0.1);
  }

  header {
    background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0));
    z-index: 10;
  }
  .header__nav {
    -webkit-backdrop-filter: blur(15px);
    backdrop-filter: blur(15px);
    background-color: rgba(242, 242, 242, 0.05);
    border: 1px solid rgba(242, 242, 242, 0.1);
    border-radius: 24px;
    justify-content: space-between;
    align-items: center;
    padding: 4px;
    transition:
      box-shadow 1s cubic-bezier(0.23, 1, 0.32, 1),
      border 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
    display: flex;
    position: relative;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }
</style>
